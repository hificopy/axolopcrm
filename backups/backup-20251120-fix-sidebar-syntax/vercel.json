{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distPath": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "http://axolop.hopto.org:3002/api/:path*"
    },
    {
      "source": "/health",
      "destination": "http://axolop.hopto.org:3002/health"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "outputDirectory": "dist",
  "installCommand": "npm ci",
  "buildCommand": "npx vite build",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}